{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./api",
    "resolveJsonModule": true
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "backend"
  ]
}