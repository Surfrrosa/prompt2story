{
  "name": "prompt2story",
  "version": "1.0.0",
  "description": "AI-powered user story generator",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vercel dev",
    "build": "npm --prefix frontend run build",
    "typecheck": "tsc -p tsconfig.json --noEmit || true",
    "lint": "eslint . || true",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "bash test-all.sh",
    "check-coverage": "node check-coverage.js",
    "check-cruft": "node ./scripts/check-cruft.mjs || echo 'ℹ️  (stub) No cruft check implemented yet.'"
  },
  "keywords": [
    "ai",
    "user-stories",
    "openai",
    "vercel",
    "react"
  ],
  "author": "Surfrrosa",
  "license": "MIT",
  "dependencies": {
    "@vercel/node": "^5.3.22",
    "formidable": "^3.5.4",
    "openai": "^4.55.0",
    "pdf-parse": "^1.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/formidable": "^3.4.5",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "node-mocks-http": "^1.14.1",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "path-to-regexp": "^8.0.0",
    "undici": "^6.0.0"
  }
}
